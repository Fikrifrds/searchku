# Database Configuration
DATABASE_URL=postgresql://searchku_user:searchku_password@localhost:5432/searchku

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Google Gemini API Configuration
GOOGLE_API_KEY=your_google_api_key_here

# Application Configuration
APP_NAME=SearchKu
APP_VERSION=1.0.0
DEBUG=True

# File Upload Configuration
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_EXTENSIONS=txt,pdf,docx

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Embedding Configuration
EMBEDDING_PROVIDER=openai  # Options: openai, gemini
EMBEDDING_DIMENSION=1536  # Reduced from 3072 for pgvector compatibility

# Provider-specific Embedding Models
OPENAI_EMBEDDING_MODEL=text-embedding-3-large
GEMINI_EMBEDDING_MODEL=models/gemini-embedding-001

# Search Configuration
DEFAULT_SEARCH_LIMIT=10
MAX_SEARCH_LIMIT=100
SIMILARITY_THRESHOLD=0.7